<routing-policy xmlns="https://github.com/beluganos/beluganos/yang/routing-policy">
  <policy-definitions>
    <policy-definition>
      <name>policy-next-hop-self</name>
      <config>
        <name>policy-next-hop-self</name>
      </config>
      <statements>
        <statement>
          <name>stmt-next-hop-self</name>
          <config>
            <name>stmt-next-hop-self</name>
          </config>
          <actions>
            <config>
              <policy-result>ACCEPT_ROUTE</policy-result>
            </config>
            <bgp-actions xmlns="https://github.com/beluganos/beluganos/yang/bgp-policy">
              <config>
                <set-next-hop>SELF</set-next-hop>
              </config>
            </bgp-actions>
          </actions>
        </statement>
      </statements>
    </policy-definition>

    <policy-definition>
      <name>policy-local-pref</name>
      <config>
        <name>policy-local-pref</name>
      </config>
      <statements>
        <statement>
          <name>stmt-local-pref</name>
          <config>
            <name>stmt-local-pref</name>
          </config>
          <actions>
            <config>
              <policy-result>ACCEPT_ROUTE</policy-result>
            </config>
            <bgp-actions xmlns="https://github.com/beluganos/beluganos/yang/bgp-policy">
              <config>
                <set-local-pref>100</set-local-pref>
              </config>
            </bgp-actions>
          </actions>
        </statement>
      </statements>
    </policy-definition>

    <policy-definition>
      <name>policy-local-pref-vrf</name>
      <config>
        <name>policy-local-pref-vrf</name>
      </config>
      <statements>
        <statement>
          <name>stmt-local-pref-vrf</name>
          <config>
            <name>stmt-local-pref-vrf</name>
          </config>
          <actions>
            <config>
              <policy-result>ACCEPT_ROUTE</policy-result>
            </config>
            <bgp-actions xmlns="https://github.com/beluganos/beluganos/yang/bgp-policy">
              <config>
                <set-local-pref>110</set-local-pref>
              </config>
            </bgp-actions>
          </actions>
        </statement>
      </statements>
    </policy-definition>
  </policy-definitions>
</routing-policy>
